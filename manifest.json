{
  "manifest_version": 3,
  "name": "Vinted Brand Remover",
  "version": "1.0.0",
  "description": "Remove brand information from Vinted search results",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://*.vinted.com/*",
    "https://*.vinted.be/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.vinted.com/*",
        "https://*.vinted.be/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
